  <body>
    <h3>All Events</h3>

    <ul>
      <% @events.each do |event| %>
        <li>
          <%= event.title %>
          <%= event.start_date %>
          <%= event.id %>
          <a href="/events/<%= event.id %>/edit">Edit</a>
        </li>
      <% end %>
    </ul>

    <a href="events/new">Create New</a>
  </body>
